
@model NewProject1.Models.ApprovedOrder

@{
    ViewBag.Title = "approveorder";
}

<h2>approveorder</h2>
<style>
    .text-danger {
        color:red;
        font-weight:bold;
    }
</style>


<div class="col-md-6">
    @using (Html.BeginForm("approveorder", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)

        @Html.DropDownListFor(m => m.ChefId,new SelectList(ViewBag.ChefId,"Value","Text"),"--Select--", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ChefId)

        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @placeholder = "Please enter the Address" })
        @Html.ValidationMessageFor(m => m.MobileNo, "",new {@class="text-danger" })

        @Html.TextBoxFor(m => m.C_Address, new { @class = "form-control", @placeholder = "Please enter the Email" })
        @Html.ValidationMessageFor(m => m.C_Address)

      

        @Html.ValidationSummary(true)
        <input type="submit" css="btn" />
    }

</div>
<table class="table">
    <tr>
        <th>
            MobileNo
        </th>
        <th>
            ChefName
        </th>
        <th>
            C_Address
        </th>
        <th>
            Gender
        </th>
        <th>
            Password
        </th>

        <th></th>
    </tr>

    @foreach (var item in ViewBag.list)
    {
<tr>
    <td>
        @item.C_Address
    </td>
    <td>
        @item.ChefName
    </td>
    <td>
        @item.MobileNo
    </td>
    <td>
        @item.Gender
    </td>
    <td>
        @item.Password
    </td>
    <td>
        @Html.ActionLink("Edit", "approveorder", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteApproveOrder", new { id = item.Id })
    </td>
</tr>
    }

</table>
